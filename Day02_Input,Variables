#variable and data types 
a="rushant"
b=1
c=12.5
d = "rusha"


print("the value of A:",a)
print("the value of B:",b)
print("the value of C:",c)
print("the value of D:",d)

#to know what type of datatypes are used
#syntax type()
print("the datatype of A:",type(a))
print("the datatype of B:",type(b))
print("the datatype of C:",type(c))
print("the datatype of D:",type(d))

#to know the adreess where the value is stored in the computer memory 

print("the address of A:",id(a))
print("the address of B:",id(b))
print("the address of C:",id(c))
print("the address of D:",id(d))

#typecasting use to change the datatype of specific variable 

print("the float value of B:",float(b))
print("the integer value of C:",int(c))


#a simple program for execution 

x=10
y=20
print("x+y:", x+y*2)

x=int(input("enter your number:"))
y=int(input("enter your number:"))
print("answer is :" , x+y)

